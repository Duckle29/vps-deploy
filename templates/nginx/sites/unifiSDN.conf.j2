server {
		server_name ubnt.{{ domain }};
		listen 80;

		location /inform {
				access_log off;
				log_not_found off;

				error_log /var/log/nginx/unifi.mikkel.cc/inform_error.log warn;

				proxy_pass http://127.0.0.1:8080/inform;
				proxy_set_header Host $http_host;
				proxy_set_header X-Real-IP $remote_addr;
				proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
				proxy_set_header X-Forwarded-Proto $scheme;
		}
 
		location / {
				return 301 https://$host$request_uri;
		}
}

server {
	server_name ubnt.{{ domain }} ubnt2.{{ domain }};

	listen 443 ssl http2;
	include snippets/ssl;

	client_max_body_size 0;

	error_log /var/log/nginx/unifi.mikkel.cc/error.log warn;
    access_log /var/log/nginx/unifi.mikkel.cc/access.log;

	location / {
		proxy_pass https://127.0.0.1:{{ portmap.usdn[0] }}/;

		proxy_set_header Host	$host;
	    proxy_set_header		X-Forwarded-Proto   $scheme;
	    proxy_intercept_errors  on;
	    proxy_http_version      1.1;
	    proxy_set_header 		Upgrade $http_upgrade;
		proxy_set_header		Connection "Upgrade";
		proxy_set_header 		X-Real-IP $remote_addr;
        proxy_set_header 		X-Forwarded-For $proxy_add_x_forwarded_for;
	}
}